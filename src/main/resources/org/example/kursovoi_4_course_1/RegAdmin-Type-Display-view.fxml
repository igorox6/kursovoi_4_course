<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.kursovoi_4_course_1.Controllers.RegAdminTypeDisplayController"
            prefWidth="1000.0" prefHeight="600.0"
            style="-fx-background-color: #efefef;">

    <!-- Верхняя панель -->
    <children>
        <HBox spacing="10.0" alignment="CENTER_LEFT"
              AnchorPane.topAnchor="10.0"
              AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0">
            <children>
                <ImageView fx:id="logoImageView"
                           fitWidth="140.0" fitHeight="60.0"
                           preserveRatio="true" smooth="true"
                           pickOnBounds="true" />

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="8.0">
                    <children>
                        <Label fx:id="adminName"
                               text="Логин администратора"
                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #222;" />
                        <StackPane prefWidth="36.0" prefHeight="36.0"
                                   style="-fx-background-color: #222; -fx-background-radius: 18;">
                            <children>
                                <Label text="&#x1F464;" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                            </children>
                        </StackPane>
                    </children>
                </HBox>
            </children>
        </HBox>

        <!-- Основной контент -->
        <HBox spacing="18.0"
              AnchorPane.topAnchor="90.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0"
              AnchorPane.bottomAnchor="20.0">

            <!-- Левая колонка -->
            <VBox spacing="10.0" prefWidth="260.0" alignment="TOP_RIGHT">
                <children>
                    <Label text="Типы отображения"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                    <!-- Серый контейнер с прокруткой, внутри — три варианта -->
                    <StackPane style="-fx-background-color: #E6E6E6; -fx-background-radius: 8; -fx-padding: 10;">
                        <children>
                            <ScrollPane fitToWidth="true" prefHeight="150" style="-fx-background-color: transparent; -fx-background-insets: 0;">
                                <content>
                                    <VBox spacing="8">
                                        <padding>
                                            <Insets top="6.0" right="6.0" bottom="6.0" left="6.0"/>
                                        </padding>

                                        <!-- Используем те же кнопки, что в контроллере -->
                                        <Button fx:id="typeBox1" text="Рамка"
                                                mnemonicParsing="false"
                                                prefWidth="200" prefHeight="36"
                                                style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 14px;"
                                                onAction="#handleFrameType1"/>
                                        <Button fx:id="typeBox2" text="Ключевые точки"
                                                mnemonicParsing="false"
                                                prefWidth="200" prefHeight="36"
                                                style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 14px;"
                                                onAction="#handleFrameType2"/>
                                        <Button fx:id="typeBox3" text="Рамка с точками"
                                                mnemonicParsing="false"
                                                prefWidth="200" prefHeight="36"
                                                style="-fx-background-color: white; -fx-border-color: #000; -fx-border-width: 2; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 14px;"
                                                onAction="#handleFrameType3"/>
                                    </VBox>
                                </content>
                            </ScrollPane>
                        </children>
                    </StackPane>

                    <!-- Снизу — текущий тип и модели -->
                    <VBox spacing="6.0" style="-fx-padding: 6 0 0 6;">
                        <Label fx:id="currentTypeLabel" text="Сейчас используется: Рамка с точками"
                               style="-fx-font-size: 13px; -fx-text-fill: #222;" />
                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                            <Label text="Модель:" style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #222;" />
                            <Label fx:id="model1Value" text="w2201" style="-fx-font-size: 12px; -fx-text-fill: #111111;" />
                        </HBox>
                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                            <Label text="Модель:" style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #222;" />
                            <Label fx:id="model2Value" text="waw201" style="-fx-font-size: 12px; -fx-text-fill: #111111;" />
                        </HBox>
                    </VBox>

                    <Button fx:id="applyButton" text="Применить" onAction="#handleApply"
                            prefWidth="180.0" prefHeight="40.0"
                            style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px;" />
                </children>
            </VBox>

            <!-- Центр: большой превью (как круг в скриншоте) -->
            <StackPane prefWidth="360.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #d0d0d0; -fx-border-radius: 8; -fx-background-radius: 8;">
                <children>
                    <VBox alignment="CENTER" spacing="8.0">
                        <!-- используем cameraImageView (в контроллере называется cameraImageView) -->
                        <ImageView fx:id="cameraImageView" fitWidth="220" fitHeight="220" preserveRatio="true"/>
                    </VBox>
                </children>
            </StackPane>

            <!-- Правая колонка: выдвижная панель, ровно как в BboxController -->
            <AnchorPane fx:id="sideDrawer"
                        AnchorPane.topAnchor="40.0"
                        prefWidth="180.0" prefHeight="240.0"
                        style="-fx-background-color: transparent;">
                <children>
                    <VBox alignment="TOP_RIGHT" spacing="8.0" prefWidth="180.0" prefHeight="240.0">
                        <children>
                            <Button fx:id="toggleButton"
                                    text="←"
                                    mnemonicParsing="false"
                                    onAction="#handleToggleDrawer"
                                    prefWidth="44.0" prefHeight="44.0"
                                    style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 18px;" />

                            <Button fx:id="adminButton"
                                    text="Тип отображения"
                                    mnemonicParsing="false"
                                    visible="false"
                                    opacity="0"
                                    wrapText="true"
                                    prefWidth="160.0" prefHeight="36.0"
                                    style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 8; -fx-border-color: #22252A; -fx-border-width: 3; -fx-border-radius: 8;" />

                            <Button fx:id="modelButton"
                                    text="Тип модели"
                                    mnemonicParsing="false"
                                    onAction="#handleModelType"
                                    visible="false"
                                    opacity="0"
                                    prefWidth="160.0" prefHeight="36.0"
                                    style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 8;" />

                            <Button fx:id="userButton"
                                    text="Пользователи"
                                    mnemonicParsing="false"
                                    onAction="#handleUsers"
                                    visible="false"
                                    opacity="0"
                                    prefWidth="160.0" prefHeight="36.0"
                                    style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 8;" />

                            <Button fx:id="logoutButton"
                                    text="Выйти"
                                    mnemonicParsing="false"
                                    onAction="#handleLogout"
                                    visible="false"
                                    opacity="0"
                                    prefWidth="160.0" prefHeight="36.0"
                                    style="-fx-background-color: #ff6a00; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 8;" />
                        </children>
                    </VBox>
                </children>
            </AnchorPane>

        </HBox>
    </children>
</AnchorPane>
