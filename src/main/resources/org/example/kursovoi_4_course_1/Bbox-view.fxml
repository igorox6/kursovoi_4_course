<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.kursovoi_4_course_1.Controllers.BboxController"
            prefWidth="900.0" prefHeight="520.0"
            style="-fx-background-color: #efefef;">

    <children>

        <!-- Верхняя панель -->
        <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0" spacing="6.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-padding: 6 12 6 12;">
                    <children>
                        <ImageView fx:id="logoImageView"
                                   fitWidth="140.0" fitHeight="60.0"
                                   preserveRatio="true" smooth="true" pickOnBounds="true" />

                        <Region HBox.hgrow="ALWAYS" />

                        <VBox alignment="CENTER_RIGHT" spacing="6.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" spacing="8.0">
                                    <children>
                                        <Label text="Логин"
                                               style="-fx-font-size: 14px; -fx-text-fill: #222222; -fx-font-weight: 600;" />
                                        <StackPane prefWidth="36.0" prefHeight="36.0"
                                                   style="-fx-background-color: #222; -fx-background-radius: 18;">
                                            <children>
                                                <Label text="&#x1F464;" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Центральная камера -->
        <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="40.0">
            <children>
                <StackPane fx:id="cameraContainer"
                           prefWidth="360.0" prefHeight="360.0"
                           minWidth="360.0" minHeight="360.0"
                           maxWidth="360.0" maxHeight="360.0"
                           style="-fx-border-color: #111111; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 6;">
                    <children>
                        <AnchorPane fx:id="cameraPane"
                                    prefWidth="340.0" prefHeight="340.0"
                                    minWidth="340.0" minHeight="340.0"
                                    maxWidth="340.0" maxHeight="340.0" />
                    </children>
                </StackPane>
            </children>
        </StackPane>

        <!-- Нижние подписи -->
        <VBox spacing="6.0" AnchorPane.leftAnchor="18.0" AnchorPane.bottomAnchor="18.0" alignment="BOTTOM_LEFT">
            <children>
                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Модель:" style="-fx-font-size: 12px; -fx-text-fill: #222222; -fx-font-weight: 600;" />
                        <Label fx:id="model1Value" text="w2201" style="-fx-font-size: 12px; -fx-text-fill: #111111;" />
                    </children>
                </HBox>

                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Модель:" style="-fx-font-size: 12px; -fx-text-fill: #222222; -fx-font-weight: 600;" />
                        <Label fx:id="model2Value" text="waw201" style="-fx-font-size: 12px; -fx-text-fill: #111111;" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Выдвижная панель справа -->
        <AnchorPane fx:id="sideDrawer"
                    AnchorPane.topAnchor="60.0"
                    AnchorPane.rightAnchor="-125.0"
                    prefWidth="180.0" prefHeight="160.0"
                    style="-fx-background-color: transparent;">
            <children>
                <VBox alignment="TOP_LEFT" spacing="8.0" prefWidth="180.0" prefHeight="160.0">
                    <children>
                        <Button fx:id="toggleButton"
                                text="←"
                                mnemonicParsing="false"
                                onAction="#handleToggleDrawer"
                                prefWidth="44.0" prefHeight="44.0"
                                style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 18px;" />

                        <Button fx:id="adminButton"
                                text="Войти как администратор"
                                mnemonicParsing="false"
                                onAction="#handleAdminLogin"
                                visible="false"
                                opacity="0"
                                wrapText="true"
                                prefWidth="160.0" prefHeight="40.0"
                                style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 8;" />

                        <Button fx:id="logoutButton"
                                text="Выйти"
                                mnemonicParsing="false"
                                onAction="#handleLogout"
                                visible="false"
                                opacity="0"
                                prefWidth="160.0" prefHeight="36.0"
                                style="-fx-background-color: #ff6a00; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 8;" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
