<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.kursovoi_4_course_1.Controllers.BboxController"
            prefWidth="900.0" prefHeight="520.0"
            style="-fx-background-color: #efefef;">

    <children>
        <!-- HEADER (logo left, login+avatar+back button right) -->
        <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0" spacing="6.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-padding: 6 12 6 12;">
                    <children>
                        <!-- Уменьшенный логотип, выше -->
                        <ImageView fx:id="logoImageView"
                                   fitWidth="140.0" fitHeight="60.0"
                                   preserveRatio="true" smooth="true" pickOnBounds="true" />

                        <Region HBox.hgrow="ALWAYS" />

                        <VBox alignment="CENTER_RIGHT" spacing="6.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" spacing="8.0">
                                    <children>
                                        <Label text="Логин"
                                               style="-fx-font-size: 14px; -fx-text-fill: #222222; -fx-font-weight: 600;" />
                                        <StackPane prefWidth="36.0" prefHeight="36.0"
                                                   style="-fx-background-color: #222; -fx-background-radius: 18;">
                                            <children>
                                                <Label text="&#x1F464;" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>

                                <!-- Увеличенная кнопка назад -->
                                <Button text="←"
                                        mnemonicParsing="false"
                                        onAction="#handleBack"
                                        style="-fx-background-color: #1f78d1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 20px;"
                                        prefWidth="64.0" prefHeight="56.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- CENTER: StackPane с фиксированной рамкой камеры (центрируется внутри StackPane) -->
        <!-- Обратите внимание: cameraContainer имеет фиксированные pref/min/max размеры, поэтому не растягивается -->
        <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0">
            <children>
                <StackPane fx:id="cameraContainer"
                           prefWidth="360.0" prefHeight="360.0"
                           minWidth="360.0" minHeight="360.0"
                           maxWidth="360.0" maxHeight="360.0"
                           style="-fx-border-color: #111111; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 6;">
                    <children>
                        <!-- cameraPane имеет немного меньше размер, чтобы внутри была отступная рамка -->
                        <AnchorPane fx:id="cameraPane"
                                    prefWidth="340.0" prefHeight="340.0"
                                    minWidth="340.0" minHeight="340.0"
                                    maxWidth="340.0" maxHeight="340.0" />
                    </children>
                </StackPane>
            </children>
        </StackPane>

        <!-- НИЗ: подписи моделей — явно выше нижнего края, видны всегда -->
        <VBox spacing="6.0" AnchorPane.leftAnchor="18.0" AnchorPane.bottomAnchor="18.0" alignment="BOTTOM_LEFT">
            <children>
                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Модель:" style="-fx-font-size: 12px; -fx-text-fill: #222222; -fx-font-weight: 600;" />
                        <Label fx:id="model1Value" text="w2201" style="-fx-font-size: 12px; -fx-text-fill: #111111;" />
                    </children>
                </HBox>

                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Модель:" style="-fx-font-size: 12px; -fx-text-fill: #222222; -fx-font-weight: 600;" />
                        <Label fx:id="model2Value" text="waw201" style="-fx-font-size: 12px; -fx-text-fill: #111111;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
